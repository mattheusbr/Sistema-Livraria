@model LivrariaTest.Models.Autor

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Livro</h4>
<hr />
<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdAutor" />
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" value="Editar" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-action="Index">Listar Autores</a>
    </form>
    <span class="text-danger">@ViewData["Message"]</span>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
