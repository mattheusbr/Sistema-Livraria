@model LivrariaTest.Models.Autor

@{
    ViewData["Title"] = "Detalhar";
}

<h4>Detalhar Autor(a)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: inline-block">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdAutor">Editar</a>
                <a class="btn btn-secondary" asp-action="Index">Listar Autores</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
