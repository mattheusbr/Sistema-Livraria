@model LivrariaTest.Models.Livro

@{
    ViewData["Title"] = "Detalhar";
}

<h4>Editar Livro</h4>
<hr />
<div>
    <form style="margin-left: 12%; margin-right: 12%">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Codigo">Código</label>
                <input asp-for="Codigo" class="form-control" placeholder="Código" readonly />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-9">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" placeholder="Nome do Livro" readonly />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Autor">Autor</label>
                <input asp-for="Fk_Autor.Nome" class="form-control" placeholder="Nome do Livro" readonly />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Editora">Editora</label>
                <input asp-for="Fk_Editora.Nome" class="form-control" placeholder="Nome do Livro" readonly />
            </div>
        </div>
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.IdLivro">Editar</a>
        <a class="btn btn-primary" asp-action="Index">Listar Livros</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
