@model LivrariaTest.Models.Livro

@{
    ViewData["Title"] = "Adicionar um Livro";
}

<h4>Adicionar Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Código</label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <select asp-for="Autor" class="form-control" asp-items="ViewBag.Autor"></select>
            </div>
            <div class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <select asp-for="Editora" class="form-control" asp-items="ViewBag.Editora"></select>
            </div>
            <span class="text-danger">@ViewData["Message"]</span>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn" asp-action="Index">Listar Livros</a>
</div>

